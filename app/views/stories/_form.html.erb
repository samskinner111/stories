<%= form_for(story) do |f| %>
  <% if story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :story_type %>
    <%= f.select(:story_type, Story.story_types.collect {|p| [p] }, {:include_blank => 'Please select a story type'}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
